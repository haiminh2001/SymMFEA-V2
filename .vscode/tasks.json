{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "build-debug",
			"command": "${workspaceFolder}/run.sh",
			"group": {
				"isDefault": true
			},
			"args": [
				"--build-only",
				"-o",
				"cmake-build-debug",
				"-DCMAKE_BUILD_TYPE=Debug"
			]
		},
		{
			"type": "shell",
			"label": "build-test",
			"command": "${workspaceFolder}/run.sh",
			"group": {
				"isDefault": true
			},
			"args": [
				"--build-only",
				"-o",
				"cmake-build-debug",
				"-DCMAKE_BUILD_TYPE=Test"
			]
		},
		{
			"type": "shell",
			"label": "run",
			"command": "${workspaceFolder}/run.sh",
			"group": {
				"isDefault": true
			},
			"args": [
				"-o",
				"cmake-build",
				"-DCMAKE_BUILD_TYPE=Release"
			]
		},
		{
			"type": "shell",
			"label": "run_test",
			"command": "${workspaceFolder}/run.sh",
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"args": [
				"-o",
				"cmake-build-debug",
				"-DCMAKE_BUILD_TYPE=Test"
			]
		}
	]
}