{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "build",
			"command": "cmake",
			"args": [
				"-S",
				"${workspaceFolder}",
				"${workspaceFolder}/source",
				"-B",
				"cmake-build-debug"
			],
			"group": "build",
			"problemMatcher": "$gcc"
		},
		{
			"type": "shell",
			"label": "run_test",
			"command": "${workspaceFolder}/cmake-tests/SymMFEA_test",
			"group": {
				"kind": "test",
				"isDefault": true
			}
		},
		{
			"type": "shell",
			"label": "build_test",
			"command": "${workspaceFolder}/build_test.sh",
			"group": {
				"kind": "test",
				"isDefault": true
			}
		}
	]
}